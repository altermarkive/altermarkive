// Zed settings documentation: https://zed.dev/docs/configuring-zed
{
    "assistant": {
      "default_model": {
        "provider": "ollama",
        "model": "llama3.1:latest"
      },
      "version": "2"
    },
    "telemetry": {
      "diagnostics": false,
      "metrics": false
    },
    "ui_font_size": 16,
    "buffer_font_features": {
      "calt": false
    },
    "buffer_font_size": 16,
    "language_overrides": {
      "Rust": {
        "inlay_hints": {
          "enabled": true
        }
      }
    },
    "lsp": {
      "rust-analyzer": {
        "initialization_options": {
          "checkOnSave": {
            "command": "clippy"
          }
        }
      }
    },
    "theme": {
      "mode": "system",
      "light": "One Light",
      "dark": "One Dark"
    }
  }
  